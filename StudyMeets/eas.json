{
  "cli": {
    "version": ">= 12.6.2",
    "appVersionSource": "remote",
    "requireCommit": true
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true,
      "distribution": "store",
      "android": {
        "buildType": "apk",
        "workflow": "managed"
      },
      "ios": {
        "buildType": "archive",
        "workflow": "managed"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
